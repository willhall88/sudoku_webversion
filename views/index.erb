<html>
<head>
	<title>Sudoku Game</title>
	<link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
</head>
<body>
<h1>Life is too short for playing Sudoku</h1>
	<form action="/" method="post">
	</form>
	



	<div id="sudoku">
		<form action="/" method="post">
		<% 3.times do |row| %>
			<div class="row">
				<% 3.times do |box| %>
				<div class="box">
					<% 3.times do |cell_row| %>
					<div class="cell-row">
						<% 3.times do |cell| %>						
						<%= partial :cell, :locals => {:cell_index => row * 27 + box * 3 + cell_row * 9 + cell} %>
						<% end %>
					</div>
					<% end %>
				</div>
				<% end %>
			</div>
		<% end %>
		<button class="check" name="action" value="check_game">Check solution</button>
		<button class="save" name="action" value="save_game">Save game</button>
		</form>
	</div>
	<div id = "flash"> 
		<%= flash[:notice] %>
	</div>	
	<form action="/new game" method="post">
		<button class="easy" type = "submit" name="level" value="Easy">Easy</button>
		<button class="medium" type = "submit" name="level" value="Medium">Medium</button>
		<button class="hard" type = "submit" name="level" value="Hard">Hard</button>
	</form>

	<a href="/solution"><button class="show">Show solution</button></a>
	<a href="/load_game"><button class="load">Load game</button></a>


</body>
</html>